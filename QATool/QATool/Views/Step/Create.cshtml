@model QATool.Models.Step

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Step</legend>

        <div class="editor-field">
            @Html.Hidden("TestCaseId",(int)ViewBag.testCaseId)
            @Html.ValidationMessageFor(model => model.TestCaseId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Action)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Action)
            @Html.ValidationMessageFor(model => model.Action)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Result)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Result)
            @Html.ValidationMessageFor(model => model.Result)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Go Back", "Edit", "TestCase", new { id = ViewBag.testCaseId }, null)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
