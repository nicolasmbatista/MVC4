@model QATool.Models.Step

<tr>
    <td>
        <input type="hidden" name="Steps.Index" value="@ViewBag.i" />
    </td>
    <td>
        <div class="display-label">
            @ViewBag.i                            
            <input type="hidden" name="Steps[@ViewBag.i].StepId" value="@Model.StepId" />
        </div>
    </td>
    <td>
        <div class="editor-field">
            @Html.EditorFor(model => model.Action, new { id = ViewBag.i, name = "Steps["+ViewBag.i+"].StepId" , value = Model.StepId})
            @Html.ValidationMessageFor(model => model.Action)
        </div>
    </td>
    <td>
        <div class="editor-field">
            @Html.EditorFor(model => model.Result, new { @name="Steps["+ViewBag.i+"].StepId" , @value=Model.StepId})
            @Html.ValidationMessageFor(model => model.Result)
        </div>
    </td>
</tr>   